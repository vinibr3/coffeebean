<div class='row'>
  <div class='col'>
    <h2><%= t('.title') %></h2>
    <%= form_with model: @user, local: true , url: registrations_path do |f| %>
      <div class="mb-3">
        <%= f.label :name, class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= active_record_errors(f.object, :nome) %>
      </div>
      <div class="mb-3">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= active_record_errors(f.object, :email) %>
      </div>
      <div class="mb-3">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= active_record_errors(f.object, :password) %>
      </div>
      <div class="mb-3">
        <%= f.label :password_confirmation, class: 'form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <%= active_record_errors(f.object, :password_confirmation) %>
      </div>
      <div>
         <%= f.submit t('.submit'), { class: 'btn btn-success' } %>
      </div>
    <% end %>
    <div>
       <%= link_to t('helpers.sign_in'), new_session_path %>
    </div>
  </div>
</div>
